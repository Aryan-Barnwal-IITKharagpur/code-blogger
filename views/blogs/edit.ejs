<%- include('../partials/header') %>

<div class="container">
    <div class="col-lg-6 col-md-10 col-sm-10 col-xs-10" id="edit-blog">
        <h3 style="margin: 10px;color: darkcyan;">Edit your blog</h3>
        <hr>
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
            </div>   
            <div class="form-group">
                <textarea class="form-control" name="blog[content]"><%= blog.content %></textarea>
            </div>
            <div class="form-group">
                <input class=" btn btn-success form-control" type="submit" value="Update">
            </div> 
            <div style="text-align: center;">
                <a href="/blogs/<%= blog._id %>">Go Back</a>  
            </div>
            
         </form>
    </div>
</div>

<script>
  CKEDITOR.replace('blog[content]');
</script>

<%- include('../partials/footer') %>

