<%- include('../partials/header') %>

<div class="container">
    <h1 style="text-align: center;">Top Stories</h1>
    <hr>

    <% blogs.forEach(function(blog){ %>
        <div class="card mb-3" style="max-width: 1100px;">
            <div class="row no-gutters">
              <div class="col-md-8">
                <div class="card-body">
                  <h3 class="card-title"><%= blog.title %></h3>
                  <p class="card-text"><small class="text-muted"><h4><i style='font-size:24px' class='fas'>&#xf406;</i><%= blog.author.username %></h4></small></p>
                  <p class="card-text"><small class="text-muted"><h4><i style='font-size:24px' class='fas'>&#xf783;</i>  <%= blog.created.toDateString() %></h4></small></p>
                  <p class="card-text"><%- blog.content.substring(0,100) %>...</p>
                  <a class="btn btn-primary" href="/blogs/<%= blog._id %>">Read More</a>
                </div>
              </div>
              <div class="col-md-4">
                <img src="<%= blog.image %>" class="card-img" style="height: 100%;" alt="Image">
              </div>
            </div>
          </div>
         <hr>
        <% }); %>
</div>


<%- include('../partials/footer') %>
