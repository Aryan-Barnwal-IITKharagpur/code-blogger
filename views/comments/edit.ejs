<%- include('../partials/header') %>



<div class="container">
    <div class="col-lg-4 col-md-6 col-sm-8 col-xs-10" id="comment-edit">
        <h3 style="color: darkcyan;">Edit your Comment: </h3>
        <hr>
        <form action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" rows="10" name="comment[text]" ><%= comment.text %></textarea>
            </div>           
            <!-- <input type="text" name="comment[author]" value="<%= comment.author %>"> -->
            <div class="form-group">
                <input class="form-control btn btn-success" type="submit" value="Update">
            </div>   
        </form>
        <div  style="text-align: center;">
            <a href="/blogs/<%= blog_id %>">Go Back!!!</a>
        </div>
        
    </div>
    
</div>

<%- include('../partials/footer') %>